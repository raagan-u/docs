{
    "post": {
        "operationId": "createOrder",
        "summary": "Creates a new order.",
        "description": "Creates a new cross-chain swap order by either passing an attested quote or manually providing the required fields, with or without a secret hash. If a secret hash is provided, both initiator addresses are required, regardless of the chain. If it's omitted (mainnet only), Garden will auto-generate it. For non-Bitcoin chains, both initiator addresses must be provided. If Bitcoin is involved, only the non-Bitcoin address is needed.",
        "servers": [
            {
                "url": "https://api.garden.finance/orders",
                "description": "Testnet - Auth, Gasless, Orderbook server"
            },
            {
                "url": "https://api.garden.finance/mainnet/orders",
                "description": "Mainnet - Auth, Gasless, Orderbook server"
            }
        ],
        "security": [
            {
                "bearer": []
            }
        ],
        "requestBody": {
            "required": true,
            "content": {
                "application/json": {
                    "schema": {
                        "$ref": "./components/schemas.json#/CreateOrderRequest"
                    }
                }
            }
        },
        "responses": {
            "200": {
                "description": "Order created successfully.",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "./components/schemas.json#/SuccessResponse"
                        }
                    }
                }
            },
            "400": {
                "description": "Bad request",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "./components/schemas.json#/ErrorResponse"
                        }
                    }
                }
            },
            "401": {
                "description": "Bad request - Unauthorized"
            },
            "500": {
                "description": "Internal server error",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "./components/schemas.json#/ServerErrorResponse"
                        }
                    }
                }
            }
        },
        "tags": [
            "Gasless"
        ]
    }
}
